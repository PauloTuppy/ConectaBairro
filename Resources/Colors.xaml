<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="PrimaryColorBrush" Color="#0078D4" />
    <SolidColorBrush x:Key="SecondaryColorBrush" Color="#107C10" />
    <SolidColorBrush x:Key="AccentColorBrush" Color="#FF9800" />
    <SolidColorBrush x:Key="LightGrayColorBrush" Color="#F3F3F3" />
    <SolidColorBrush x:Key="WhiteColorBrush" Color="#FFFFFF" />

    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0078D4" Offset="0.0"/>
        <GradientStop Color="#107C10" Offset="1.0"/>
    </LinearGradientBrush>

</ResourceDictionary>