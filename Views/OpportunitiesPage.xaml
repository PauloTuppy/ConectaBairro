<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="ConectaBairro.Views.OpportunitiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:ConectaBairro.ViewModels"
      mc:Ignorable="d"
      Background="#F0F4F8">

    <Page.DataContext>
        <vm:OpportunitiesViewModel />
    </Page.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- ============ HEADER ============ -->
        <Border Grid.Row="0" Padding="20,40,20,24" CornerRadius="0,0,28,28">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#059669" Offset="0.0"/>
                    <GradientStop Color="#10B981" Offset="0.5"/>
                    <GradientStop Color="#34D399" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
            
            <StackPanel Spacing="16">
                <StackPanel Spacing="4">
                    <TextBlock Text="Oportunidades Reais" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Programas do Governo Federal e parceiros" FontSize="14" Foreground="#D1FAE5"/>
                </StackPanel>
                
                <!-- Barra de Busca -->
                <Border Background="White" CornerRadius="14" Padding="4">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <TextBlock Grid.Column="0" Text="Buscar" FontSize="14" Foreground="#9CA3AF" VerticalAlignment="Center" Margin="12,0,8,0"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                 PlaceholderText="cursos, programas..." 
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"/>
                        <Button Grid.Column="2" Command="{Binding SearchCommand}" Background="#059669" CornerRadius="10" Padding="12,8" Margin="4">
                            <TextBlock Text="Buscar" Foreground="White" FontSize="13"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Stats -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                    <Border Grid.Column="0" Background="#FFFFFF25" CornerRadius="12" Padding="12,8">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="10+" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Cursos" FontSize="11" Foreground="#D1FAE5" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Background="#FFFFFF25" CornerRadius="12" Padding="12,8">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="R$ 2500" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Maior Bolsa" FontSize="11" Foreground="#D1FAE5" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Background="#FFFFFF25" CornerRadius="12" Padding="12,8">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="600+" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Vagas" FontSize="11" Foreground="#D1FAE5" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- ============ CONTEÚDO ============ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20" Padding="20">

                <!-- Filtros por Programa -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Command="{Binding SelectProgramCommand}" CommandParameter="Todos" Background="#059669" CornerRadius="20" Padding="16,10">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Ellipse Width="8" Height="8" Fill="White"/>
                                <TextBlock Text="Todos" Foreground="White" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding SelectProgramCommand}" CommandParameter="Autonomia e Renda" Background="White" CornerRadius="20" Padding="16,10" BorderBrush="#E5E7EB" BorderThickness="1">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Ellipse Width="8" Height="8" Fill="#3B82F6"/>
                                <TextBlock Text="Autonomia e Renda" Foreground="#374151"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding SelectProgramCommand}" CommandParameter="PRONATEC" Background="White" CornerRadius="20" Padding="16,10" BorderBrush="#E5E7EB" BorderThickness="1">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Ellipse Width="8" Height="8" Fill="#8B5CF6"/>
                                <TextBlock Text="PRONATEC" Foreground="#374151"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding SelectProgramCommand}" CommandParameter="SENAC" Background="White" CornerRadius="20" Padding="16,10" BorderBrush="#E5E7EB" BorderThickness="1">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Ellipse Width="8" Height="8" Fill="#F59E0B"/>
                                <TextBlock Text="SENAC" Foreground="#374151"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding SelectProgramCommand}" CommandParameter="SESC" Background="White" CornerRadius="20" Padding="16,10" BorderBrush="#E5E7EB" BorderThickness="1">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Ellipse Width="8" Height="8" Fill="#EF4444"/>
                                <TextBlock Text="SESC" Foreground="#374151"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Lista de Oportunidades -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Oportunidades Disponíveis" FontSize="18" FontWeight="Bold" Foreground="#1F2937"/>
                    
                    <ItemsRepeater ItemsSource="{Binding FilteredOpportunities}">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="16" Padding="16" Margin="0,0,0,12">
                                    <StackPanel Spacing="12">
                                        <!-- Header do Card -->
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel Grid.Column="0" Spacing="4">
                                                <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="#1F2937" TextWrapping="Wrap"/>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="{Binding Provider}" FontSize="13" Foreground="#6B7280"/>
                                                    <TextBlock Text="|" Foreground="#D1D5DB"/>
                                                    <TextBlock Text="{Binding Duration}" FontSize="13" Foreground="#6B7280"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <Border Grid.Column="1" Background="#DCFCE7" CornerRadius="8" Padding="10,6">
                                                <TextBlock FontSize="14" FontWeight="Bold" Foreground="#166534">
                                                    <Run Text="R$ "/><Run Text="{Binding Salary}"/>
                                                </TextBlock>
                                            </Border>
                                        </Grid>

                                        <!-- Descrição -->
                                        <TextBlock Text="{Binding Description}" FontSize="13" Foreground="#6B7280" TextWrapping="Wrap" MaxLines="2"/>

                                        <!-- Tags -->
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Border Background="#EFF6FF" CornerRadius="6" Padding="8,4">
                                                <TextBlock Text="{Binding Program}" FontSize="11" Foreground="#1D4ED8"/>
                                            </Border>
                                            <Border Background="#F3F4F6" CornerRadius="6" Padding="8,4">
                                                <TextBlock Text="{Binding Category}" FontSize="11" Foreground="#4B5563"/>
                                            </Border>
                                            <Border Background="#FEF3C7" CornerRadius="6" Padding="8,4">
                                                <TextBlock FontSize="11" Foreground="#92400E">
                                                    <Run Text="{Binding Vacancies}"/><Run Text=" vagas"/>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>

                                        <!-- Requisitos -->
                                        <TextBlock FontSize="12" Foreground="#9CA3AF">
                                            <Run Text="Requisitos: "/><Run Text="{Binding Requirements}"/>
                                        </TextBlock>

                                        <!-- Botões -->
                                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                            <Button Grid.Column="0" Background="#F3F4F6" CornerRadius="10" Padding="12,10" HorizontalAlignment="Stretch">
                                                <TextBlock Text="Saiba Mais" Foreground="#374151" FontSize="13" HorizontalAlignment="Center"/>
                                            </Button>
                                            <Button Grid.Column="1" Background="#059669" CornerRadius="10" Padding="12,10" HorizontalAlignment="Stretch">
                                                <TextBlock Text="Inscrever-se" Foreground="White" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                            </Button>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </StackPanel>

                <Border Height="20"/>
            </StackPanel>
        </ScrollViewer>

        <!-- ============ BOTTOM NAV ============ -->
        <Border Grid.Row="2" Background="White" CornerRadius="24,24,0,0" Padding="8,12,8,8">
            <Grid ColumnDefinitions="*,*,*,*,*" Height="56">
                <Button Grid.Column="0" Style="{ThemeResource TextBlockButtonStyle}" Click="NavigateToHome">
                    <StackPanel Spacing="2" HorizontalAlignment="Center">
                        <TextBlock Text="Home" FontSize="22" HorizontalAlignment="Center"/>
                        <TextBlock Text="Home" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1" Style="{ThemeResource TextBlockButtonStyle}" Click="NavigateToCourses">
                    <StackPanel Spacing="2" HorizontalAlignment="Center">
                        <TextBlock Text="Cursos" FontSize="22" HorizontalAlignment="Center"/>
                        <TextBlock Text="Cursos" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="2" Style="{ThemeResource TextBlockButtonStyle}">
                    <Border Background="#D1FAE5" CornerRadius="16" Padding="16,8">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="Vagas" FontSize="20"/>
                            <TextBlock Text="Vagas" FontSize="12" Foreground="#059669" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Button>
                <Button Grid.Column="3" Style="{ThemeResource TextBlockButtonStyle}" Click="NavigateToBadges">
                    <StackPanel Spacing="2" HorizontalAlignment="Center">
                        <TextBlock Text="Badges" FontSize="22" HorizontalAlignment="Center"/>
                        <TextBlock Text="Badges" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="4" Style="{ThemeResource TextBlockButtonStyle}" Click="NavigateToProfile">
                    <StackPanel Spacing="2" HorizontalAlignment="Center">
                        <TextBlock Text="Perfil" FontSize="22" HorizontalAlignment="Center"/>
                        <TextBlock Text="Perfil" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
