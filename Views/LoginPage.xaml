<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="ConectaBairro.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F0F4F8">

    <Grid>
        <!-- Background Gradient -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667EEA" Offset="0.0"/>
                    <GradientStop Color="#764BA2" Offset="0.5"/>
                    <GradientStop Color="#F093FB" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                        MaxWidth="400" Padding="32" Spacing="24">
                
                <!-- Logo and Title -->
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <Border Background="White" CornerRadius="24" Padding="20" 
                            HorizontalAlignment="Center" Opacity="0.95">
                        <TextBlock Text="ðŸ˜ï¸" FontSize="64" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="ConnectNeighborhood" FontSize="32" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Connecting communities with opportunities" 
                               FontSize="14" Foreground="#E0E7FF" HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>

                <!-- Login Card -->
                <Border Background="White" CornerRadius="24" Padding="24">
                    <Border.Shadow>
                        <ThemeShadow/>
                    </Border.Shadow>
                    <StackPanel Spacing="20">
                        <TextBlock Text="Sign in to your account" FontSize="20" FontWeight="SemiBold" 
                                   Foreground="#1F2937" HorizontalAlignment="Center"/>
                        
                        <!-- Google Login -->
                        <Button x:Name="GoogleLoginButton" Click="GoogleLogin_Click" 
                                HorizontalAlignment="Stretch" Padding="16" CornerRadius="12"
                                Background="White" BorderBrush="#E5E7EB" BorderThickness="2">
                            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                                <Border Background="#EA4335" CornerRadius="4" Padding="4">
                                    <TextBlock Text="G" FontSize="18" FontWeight="Bold" Foreground="White"/>
                                </Border>
                                <TextBlock Text="Continue with Google" FontSize="16" 
                                           Foreground="#374151" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- GitHub Login -->
                        <Button x:Name="GitHubLoginButton" Click="GitHubLogin_Click" 
                                HorizontalAlignment="Stretch" Padding="16" CornerRadius="12"
                                Background="#24292E" BorderThickness="0">
                            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                                <Border Background="White" CornerRadius="12" Padding="4">
                                    <TextBlock Text="ðŸ™" FontSize="16"/>
                                </Border>
                                <TextBlock Text="Continue with GitHub" FontSize="16" 
                                           Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Divider -->
                        <Grid>
                            <Border Height="1" Background="#E5E7EB" VerticalAlignment="Center"/>
                            <Border Background="White" Padding="12,0" HorizontalAlignment="Center">
                                <TextBlock Text="or" FontSize="12" Foreground="#9CA3AF"/>
                            </Border>
                        </Grid>

                        <!-- Guest Login -->
                        <Button x:Name="GuestButton" Click="GuestLogin_Click" 
                                HorizontalAlignment="Stretch" Padding="16" CornerRadius="12"
                                Background="#F3F4F6" BorderThickness="0">
                            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ‘¤" FontSize="18"/>
                                <TextBlock Text="Continue as guest" FontSize="16" 
                                           Foreground="#6B7280" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Loading -->
                        <StackPanel x:Name="LoadingPanel" Visibility="Collapsed" 
                                    HorizontalAlignment="Center" Spacing="8">
                            <ProgressRing IsActive="True" Width="32" Height="32"/>
                            <TextBlock x:Name="LoadingText" Text="Authenticating..." 
                                       FontSize="14" Foreground="#6B7280"/>
                        </StackPanel>

                        <!-- Status -->
                        <TextBlock x:Name="StatusText" Text="" FontSize="14" 
                                   Foreground="#EF4444" HorizontalAlignment="Center"
                                   TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Terms -->
                <TextBlock Text="By continuing, you agree to our Terms of Service and Privacy Policy" 
                           FontSize="11" Foreground="#E0E7FF" TextAlignment="Center" 
                           TextWrapping="Wrap" Opacity="0.8"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
