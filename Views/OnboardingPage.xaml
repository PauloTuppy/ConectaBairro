<Page x:Class="ConectaBairro.Views.OnboardingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:ConectaBairro.ViewModels"
      xmlns:models="using:ConectaBairro.Models"
      mc:Ignorable="d"
      Background="#FFFFFF">

    <Grid RowDefinitions="*,Auto">
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="0">
                <!-- Hero Section with Gradient -->
                <Border Height="320" CornerRadius="0,0,32,32">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#0078D4" Offset="0.0"/>
                            <GradientStop Color="#00BCF2" Offset="0.5"/>
                            <GradientStop Color="#107C10" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16" Padding="32">
                        <TextBlock Text="ðŸ˜ï¸" FontSize="80" HorizontalAlignment="Center"/>
                        <TextBlock Text="ConnectNeighborhood"
                                   Foreground="White"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Transforming communities through opportunities"
                                   Foreground="White"
                                   Opacity="0.95"
                                   FontSize="16"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   MaxWidth="300"/>
                    </StackPanel>
                </Border>

                <!-- Features Cards -->
                <StackPanel Spacing="16" Padding="24,32,24,24">
                    <!-- Card 1 -->
                    <Border Background="#F8F9FA" CornerRadius="16" Padding="20">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                            <Border Grid.Column="0" Width="56" Height="56" CornerRadius="12" Background="#E3F2FD">
                                <TextBlock Text="ðŸ“š" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                <TextBlock Text="Free Courses" FontSize="18" FontWeight="SemiBold" Foreground="#1A1A1A"/>
                                <TextBlock Text="Access professional courses with scholarship support" FontSize="14" Foreground="#666666" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Card 2 -->
                    <Border Background="#F8F9FA" CornerRadius="16" Padding="20">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                            <Border Grid.Column="0" Width="56" Height="56" CornerRadius="12" Background="#E8F5E9">
                                <TextBlock Text="ðŸŽ¯" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                <TextBlock Text="Social Programs" FontSize="18" FontWeight="SemiBold" Foreground="#1A1A1A"/>
                                <TextBlock Text="Discover benefits available for you" FontSize="14" Foreground="#666666" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Card 3 -->
                    <Border Background="#F8F9FA" CornerRadius="16" Padding="20">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                            <Border Grid.Column="0" Width="56" Height="56" CornerRadius="12" Background="#FFF3E0">
                                <TextBlock Text="ðŸ†" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                <TextBlock Text="Achievements" FontSize="18" FontWeight="SemiBold" Foreground="#1A1A1A"/>
                                <TextBlock Text="Earn XP and badges as you complete your journey" FontSize="14" Foreground="#666666" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Card 4 -->
                    <Border Background="#F8F9FA" CornerRadius="16" Padding="20">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                            <Border Grid.Column="0" Width="56" Height="56" CornerRadius="12" Background="#FCE4EC">
                                <TextBlock Text="ðŸ“" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                <TextBlock Text="Local Resources" FontSize="18" FontWeight="SemiBold" Foreground="#1A1A1A"/>
                                <TextBlock Text="Find public services near you" FontSize="14" Foreground="#666666" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- CTA Section -->
                <StackPanel Padding="24,8,24,32" Spacing="16">
                    <Button Content="ðŸš€ Get Started" 
                            Command="{Binding StartCommand}" 
                            HorizontalAlignment="Stretch" 
                            Height="56"
                            FontSize="18"
                            FontWeight="SemiBold"
                            CornerRadius="12">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#0078D4" Offset="0.0"/>
                                <GradientStop Color="#00BCF2" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Foreground>
                            <SolidColorBrush Color="White"/>
                        </Button.Foreground>
                    </Button>
                    <TextBlock Text="Over 10,000 people have already transformed their lives" 
                               FontSize="13" 
                               Foreground="#999999" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
